{
	"namespace": "hud",
	"hud_spacer": {
		"type": "panel",
		"layer": 31,
		"size": [10, 10]
	},
	"bg": {
		"type": "image",
		"size": ["100% + 12px", "100% + 5px"],
		"layer": -1,
		"alpha": 0.7,
		"texture": "textures/ui/hud_tip_text_background"
	},

	"player_position_2": {
		"type": "stack_panel",
		"orientation": "horizontal",
		"size": ["100%c", "100%c"],
		"controls": [
			{ "space_0@hud.hud_spacer": {} },
			{
				"preserved_title_display_2": {
					"type": "label",
					"anchor_from": "center",
					"anchor_to": "center",
					"layer": 31,
					"offset": ["6px", 0],
					"enable_profanity_filter": false,
					"alpha": 1,
					"text": "#position_text",
					"controls": [
						{
							"bg@hud.bg": {}
						}
					],
					"bindings": [
						{
							"binding_name": "#player_position_text",
							"binding_name_override": "#position_text",
							"binding_condition": "always_when_visible",
							"binding_type": "global"
						}
					]
				}
			},
			{ "space_1@hud.hud_spacer": {} }
		],
		"bindings": [
			{
				"binding_name": "#player_position_visible",
				"binding_name_override": "#visible",
				"binding_condition": "always",
				"binding_type": "global"
			}
		]
	},

	"hud_c_tip": {
		// Should be defined from tree above
		// "$control": "",
		// "$preserved": "",
		"type": "stack_panel",
		"orientation": "horizontal",
		"size": ["100%c", "100%c"],
		"controls": [
			{ "space_0@hud.hud_spacer": {} },
			{
				"preserved_title_display": {
					"type": "label",
					"anchor_from": "center",
					"anchor_to": "center",
					"layer": 31,
					"offset": ["10px", 0],
					"enable_profanity_filter": false,
					"text": "#text_0",
					"controls": [
						{
							"bg@hud.bg": {}
						}
					],
					"bindings": [
						{
							"binding_type": "view",
							"source_control_name": "$control",
							// Remove update string
							"source_property_name": "(('§z' + #preserved_text) - $preserved)",
							"target_property_name": "#text_0"
						}
					]
				}
			},
			{ "space_1@hud.hud_spacer": {} }
		],
		"bindings": [
			{
				"binding_type": "view",
				"source_control_name": "$control",
				// If empty set visible to false
				"source_property_name": "(not (('b' + #preserved_text) - $preserved = 'b'))",
				"target_property_name": "#visible"
			}
		]
	},

