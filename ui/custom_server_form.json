{
  "namespace": "custom_server_form",
  "panel": {
    "type": "image",
    "size": ["100%с", "100%c"],
    "texture": "textures/ui/Dark",
    "layer": 3,
    "controls": [
      {
        "back_button@common.close_button_high_contrast": {
          "anchor_from": "top_right",
          "anchor_to": "top_right",
          "layer": 12,
          "offset": [-6, 3]
        }
      },
      {
        "title": {
          "offset": [0, 6],
          "type": "label",
          "text": "#title_text",
          "font_type": "MinecraftTen",
          "font_size": "big",
          "text_alignment": "center",
          "anchor_from": "top_middle",
          "layer": 4,
          "anchor_to": "top_middle"
        }
      },

      {
        "second": {
          "type": "panel",
          "size": ["100%с", "100%c"],
          "anchor_from": "center",
          "anchor_to": "center",
          "offset": [0, 0],
          "layer": 10,
          "controls": [
            {
              "scrolling_panel@common.scrolling_panel": {
                "anchor_to": "top_left",
                "anchor_from": "top_left",
                "$show_background": false,
                "size": ["100%", "100%"],
                "$scrolling_content": "custom_server_form.long_form_dynamic_buttons_panel",
                "$scroll_size": [5, "100% - 4px"],
                "$scrolling_pane_size": ["100% - 4px", "100% - 2px"],
                "$scrolling_pane_offset": [2, 0],
                "$scroll_bar_right_padding_size": [0, 0]
              }
            }
          ]
        }
      }
    ]
  },
  "long_form_dynamic_buttons_panel": {
    "type": "grid",
    "offset": [2, 16],
    "size": ["100%с", "100%c"],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "grid_rescaling_type": "horizontal",
    "grid_item_template": "custom_server_form.custom_button",
    "collection_name": "form_buttons",
    "factory": {
      "name": "buttons",
      "control_name": "custom_server_form.custom_button"
    },
    "bindings": [
      {
        "binding_name": "#form_button_length",
        "binding_name_override": "#maximum_grid_items"
      }
    ]
  },
  "custom_button": {
    "type": "panel",
    "size": [80, 80],
    "controls": [
      {
        "main_ui": {
          "type": "panel",
          "size": [70, 70],
          "controls": [
            {
              "panel_name": {
                "type": "panel",
                "size": [70, 70],
                "bindings": [
                  {
                    "binding_type": "view",
                    "source_control_name": "image",
                    "resolve_sibling_scope": true,
                    "source_property_name": "(not (#texture = ''))",
                    "target_property_name": "#visible"
                  }
                ],
                "controls": [
                  {
                    "image": {
                      "type": "image",
                      "layer": 200,
                      "size": [30, 30],
                      "offset": [0, 25],
                      "anchor_from": "top_middle",
                      "bindings": [
                        {
                          "binding_name": "#form_button_texture",
                          "binding_name_override": "#texture",
                          "binding_type": "collection",
                          "binding_collection_name": "form_buttons"
                        },
                        {
                          "binding_name": "#form_button_texture_file_system",
                          "binding_name_override": "#texture_file_system",
                          "binding_type": "collection",
                          "binding_collection_name": "form_buttons"
                        },
                        {
                          "binding_type": "view",
                          "source_property_name": "(not ((#texture = '') or (#texture = 'loading')))",
                          "target_property_name": "#visible"
                        }
                      ]
                    }
                  },
                  {
                    "text": {
                      "type": "label",
                      "text": "#form_button_text",
                      "font_size": "normal",
                      "layer": 32,
                      "color": [0.7, 0.7, 0.7],
                      "offset": [0, -12],
                      "anchor_from": "bottom_middle",
                      "max_size": ["100%", 30],
                      "text_alignment": "center",
                      "contained": true,
                      "bindings": [
                        {
                          "binding_name": "#form_button_text",
                          "binding_type": "collection",
                          "binding_collection_name": "form_buttons"
                        }
                      ]
                    }
                  }
                ]
              }
            },
            {
              "form_button@common_buttons.dark_text_button": {
                "$pressed_button_name": "button.form_button_click",
                "anchor_from": "top_left",
                "anchor_to": "top_left",
                "size": [70, 70],
                "$button_text": "#null",
                "$button_text_binding_type": "collection",
                "$button_text_grid_collection_name": "form_buttons",
                "$button_text_max_size": ["100%", 20],
                "bindings": [
                  {
                    "binding_type": "collection_details",
                    "binding_collection_name": "form_buttons"
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  }
}
